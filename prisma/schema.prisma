generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  comments      Comment[]
  likes         Like[]
  posts         Post[]
}
model Test {
  id            String    @id @default(cuid())
  name          String?
}

model Post {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime? @default(now())
  title     String
  published Boolean   @default(false)
  userId    String
  comments  Comment[]
  user      User      @relation(fields: [userId], references: [id])
}

model Comment {
  id        String   @id @default(cuid())
  title     String
  postId    String
  createdAt DateTime @default(now())
  commentId String
  user      User     @relation(fields: [commentId], references: [id])
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Like {
  id        String   @id @default(cuid())
  title     String
  postId    String
  likeId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [likeId], references: [id])
}
